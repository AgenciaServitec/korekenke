{
  "hosting": [
    {
      "public": "packages/hosting/build",
      "target": "app",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "predeploy": [
        "yarn hosting build"
      ],
      "headers": [
        {
          "source": "/index.html",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-cache"
            }
          ]
        },
        {
          "source": "/static/**/*.@(css|js)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=2628000"
            }
          ]
        }
      ],
      "redirects": [],
      "rewrites": [
        {
          "source": "/api/**",
          "function": "api"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "firestore": {
    "indexes": "firestore.indexes.json",
    "rules": "firestore.rules"
  },
  "extensions": {
    "correspondence-documents": "firebase/storage-resize-images@0.2.3",
    "storage-resize-images": "firebase/storage-resize-images@0.2.3",
    "user-documents": "firebase/storage-resize-images@0.2.3",
    "storage-resize-images-photos": "firebase/storage-resize-images@0.1.33"
  },
  "functions": {
    "predeploy": [
      "yarn functions build"
    ],
    "source": "packages/functions"
  }
}
